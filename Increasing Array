#include<bits/stdc++.h>
using namespace std;
int main(){
    long long m = 0, n, i, diff;
    cin>>n;
    long long x[n];
    for(i = 0; i < n; i++){
        cin>>x[i];
    }

    for(i = 0; i < n - 1; i++){
        if(x[i] > x[i+1]){
                diff = x[i] - x[i+1];
            m+= diff;
            x[i+1] += diff;
        }
    }
    cout<<m;
}
