#include<bits/stdc++.h>
using namespace std;

int main()
{
    string input;
    cin>>input;
    int m, i, j;
    m = j = 1;
    for(i = 1; i<input.size(); i++){
        if(input[i] == input[i-1])
            j++;
        else
            j = 1;
        if(m < j)
            m = j;
    }
    printf("%d", m);
    return 0;
}
